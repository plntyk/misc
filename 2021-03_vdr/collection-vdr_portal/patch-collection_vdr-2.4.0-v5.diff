+        SetChannelList();
+     return;    
+     }
+  channellist.Clear();
+  LOCK_CHANNELS_READ;
+  const cChannels* channels = Channels;
+  for (const cChannel *c = dynamic_cast<cChannel*>(curChannel->Next()); c; c = Channels->Next(c)) {
+      if (c->GroupSep())
+         break;
+      channellist.Add(new cChannelListItem(c));
+      }
